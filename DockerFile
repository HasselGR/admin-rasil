FROM richarvey/nginx-php-fpm:latest

# Instalar Node/NPM si lo necesitas para compilar assets
RUN apk update && apk add --no-cache git npm nodejs

WORKDIR /var/www/html

# Copia primero composer.json y composer.lock para aprovechar la cache
COPY composer.json composer.lock ./

# Instala dependencias PHP
RUN composer install --no-dev --optimize-autoloader

# Copia el resto del proyecto
COPY . .

# Ajusta permisos para storage y cache
RUN chown -R www-data:www-data /var/www/html \
    && chmod -R 775 storage bootstrap/cache
