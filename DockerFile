# Imagen base con Nginx + PHP-FPM ya integrados
FROM richarvey/nginx-php-fpm:latest

# Instalar extensiones necesarias para Laravel + PostgreSQL
RUN apk update && apk add --no-cache \
        postgresql-dev libpng-dev libjpeg-turbo-dev libzip-dev \
    && docker-php-ext-configure gd --with-jpeg \
    && docker-php-ext-install pdo pdo_pgsql gd zip bcmath opcache

# Instalar Composer (si no viene con la imagen)
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Definir directorio de trabajo
WORKDIR /var/www/html

# Copiamos primero composer.json / lock para aprovechar cache
COPY composer.json composer.lock ./

# Instalar dependencias PHP de Laravel sin dev
RUN composer install --no-dev --optimize-autoloader --no-interaction --no-progress

# Copiar todo el proyecto al contenedor
COPY . .

# Ajustar permisos para Laravel (storage y cache)
RUN chown -R nginx:nginx /var/www/html/storage /var/www/html/bootstrap/cache

# Puerto para Render
EXPOSE 80

# El CMD ya est√° definido en la imagen base (nginx + php-fpm)