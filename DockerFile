# Imagen base con Nginx + PHP-FPM
FROM richarvey/nginx-php-fpm:latest

# Instalar extensiones necesarias
RUN apk update && apk add --no-cache \
        postgresql-dev libpng-dev libjpeg-turbo-dev libzip-dev \
    && docker-php-ext-configure gd --with-jpeg \
    && docker-php-ext-install pdo pdo_pgsql gd zip bcmath

# Instalar Composer en la imagen
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Directorio de trabajo
WORKDIR /var/www/html

# Variables para Composer
ENV COMPOSER_ALLOW_SUPERUSER=1
ENV COMPOSER_NO_INTERACTION=1

# Copiar sólo composer.json y composer.lock para aprovechar cache
COPY composer.json composer.lock ./

# Instalar dependencias sin scripts (porque artisan aún no existe)
RUN composer install --no-dev --optimize-autoloader --no-progress --no-scripts

# Ahora sí copiar todo el proyecto
COPY . .

# Ejecutar scripts de Laravel después de tener artisan disponible
RUN php artisan package:discover --ansi

# Ajustar permisos de Laravel
RUN chown -R nginx:nginx storage bootstrap/cache

# Exponer el puerto
EXPOSE 80

# El contenedor usa por defecto el CMD del richarvey/nginx-php-fpm
